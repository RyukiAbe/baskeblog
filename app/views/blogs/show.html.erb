<h3 class= "show_title"><%= @blogpost.title %></h3>
<p class="show_read"><%= @blogpost.read + ' [' + @blogpost.bloggenre.name + ']' %></p>
<% contents = @blogpost.content.split "\n" %>
<div contents.each do |paragraph| %>
  <p><%= paragraph %></p>
<% end %>
</end>
<p class="show_created">(<%= @blogpost.created_at %></p>